{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "importHelpers": true,
    "incremental": true,
    "removeComments": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "lib": [
      "esnext"
    ],
    "module": "commonjs",
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "lib",
    "sourceMap": true,
    "target": "esnext",
    "forceConsistentCasingInFileNames": true
  },
  "exclude": [
    "node_modules",
    ".serverless/**/*",
    ".webpack/**/*",
    ".vscode/**/*",
    "*.config.js",
    "**/*.js"
  ],
  "include": [
    "./**/*.ts"
  ],
  "types": [
    "node",
    "aws-sdk"
  ]
}